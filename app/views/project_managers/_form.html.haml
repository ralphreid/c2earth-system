= form_for @project_manager do |f|
  - if @project_manager.errors.any?
    #error_explanation
      %h2= "#{pluralize(@project_manager.errors.count, "error")} prohibited this project_manager from being saved:"
      %ul
        - @project_manager.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :manager_initials
    = f.text_field :manager_initials

    = f.label :manager_firstname
    = f.text_field :manager_firstname

    = f.label :manager_lastname
    = f.text_field :manager_lastname
  .actions
    = f.submit 'Save'
