= form_for @site do |f|
  - if @site.errors.any?
    #error_explanation
      %h2= "#{pluralize(@site.errors.count, "error")} prohibited this site from being saved:"
      %ul
        - @site.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :county
    = f.text_field :county
  .field
    = f.label :tombrobox
    = f.text_field :tombrobox
  .field
    = f.label :fault_id
    = f.select :fault_id, Fault.all.map{|f| [f.name, f.id]}
  .actions
    = f.submit 'Save'
